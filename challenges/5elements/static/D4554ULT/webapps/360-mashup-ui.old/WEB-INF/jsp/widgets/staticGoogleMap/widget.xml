<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Widget xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" compositeWidget="false" group="Visualizations/Maps" name="Static Google Map" premium="true" xsi:noNamespaceSchemaLocation="urn:360:com.exalead.cv360.searchui.definition.v10.widget">
    <Dependencies/>
    <Includes>
        <Include location="header" path="css/style.less" type="css"/>
    </Includes>
    <Interactions/>
    <Platforms>
		<Platform type="web" supported="true" />
		<Platform type="mobile" supported="true" />
	</Platforms>
    <Preview><![CDATA[
		<img src="/resources/widgets/staticGoogleMap/images/preview.png" />
	]]></Preview>
    
    <SupportFeedsId arity="ZERO_OR_MANY" consumeFeed="true"/>
    <SupportI18N supported="false">
        <JsKeys/>
        <Languages/>
    </SupportI18N>
    
    <SupportWidgetsId arity="ZERO"/>
    
    <OptionsGroup name="General">
	    <Description>
	    	<![CDATA[
	    	https://developers.google.com/maps/documentation/staticmaps/
	    	]]>
	    </Description>
		<Option id="title" name="Widget Title" isEvaluated="true">
			<Description>Widget title, if blank no name is displayed.</Description>
		</Option>		
		<Option id="sensor" name="Sensor" isEvaluated="true" arity="ONE">
			<Description>Specifies whether the application requesting the static map is using a sensor to determine the user's location.</Description>
		</Option>
		<Option id="center" name="Center(required if no marker)" isEvaluated="true">
			<Description>Defines the center of the map.
			This parameter takes a location as either a comma-separated {latitude,longitude} pair (e.g. "40.714728,-73.998672") or
			 a string address (e.g. "city hall, new york, ny") </Description>
		</Option>
		<Option id="zoom" name="Zoom(required if no marker)" isEvaluated="true">
			<Description>Defines the zoom level of the map, which determines the magnification level of the map.
			 This parameter takes a numerical value corresponding to the zoom level of the region desired.</Description>
		</Option>
	</OptionsGroup>
	<OptionsGroup name="Markers">
		<Option id="markers" name="Displayed markers" arity="MANY" isEvaluated="true">
			<Description>
				<![CDATA[
					color:blue|label:S|40.702147,-74.015794
				]]>
			</Description>
		</Option>
	</OptionsGroup>
	<OptionsGroup name="Style">
		<Option id="width" name="Width" isEvaluated="true">			
		</Option>
		<Option id="height" name="Height" isEvaluated="true">			
		</Option>
	</OptionsGroup>
	<DefaultValues>
		<DefaultValue name="width">600</DefaultValue>
		<DefaultValue name="height">300</DefaultValue>
		<DefaultValue name="sensor">false</DefaultValue>
	</DefaultValues>
</Widget>
