<?xml version="1.0" encoding="UTF-8" ?>
<response-header-filter>

    <match-url url="^/resources/.*">
        <!-- 1 week retention -->
        <header key="Cache-Control" value="max-age=604800" />
    </match-url>

    <match-url url="^/fetch/THUMBNAIL/.*">
        <!-- 1 week retention -->
        <header key="Cache-Control" value="max-age=604800" />
    </match-url>

    <!--
        Uncomment to prevent the MashupUI from being embedded
        within an iframe.

        Note that enabling this option may prevent some features
        such as the MashupBuilder's preview from working.

        More informations on X-Frame-Options on:
        https://developer.mozilla.org/en-US/docs/Web/HTTP/X-Frame-Options
    -->
    <!--
    <match-url url=".*">
        <header key="X-Frame-Options" value="SAMEORIGIN" />
    </match-url>
    -->
</response-header-filter>
