<?xml version="1.0" encoding='UTF-8'?>
<Widget name="For Each Hit" group="Miscellaneous" premium="true">
	<Description>Loops over a result list.</Description>

	<Platforms>
		<Platform type="web" supported="true" />
		<Platform type="mobile" supported="true" />
	</Platforms>

	<SupportWidgetsId arity="ZERO_OR_MANY" />
	<SupportFeedsId arity="ONE" />
	
	<OptionsGroup name="General">
		<Option id="maxIteration" name="Maximum iteration" arity="ZERO_OR_ONE">
			<Description>
				<![CDATA[
					Max number of iterations
				]]>
			</Description>
			<Functions>
				<Check>isInteger</Check>
			</Functions>
		</Option>
		<Option id="htmlTag" name="HTML tag" arity="ZERO_OR_ONE">
			<Description>
				<![CDATA[
					<p>The HTML tag used to render this widget
					default is div, could be table, ul, ol, etc.</p>
					<p>It could be usefull to render custom html.</p>
				]]>
			</Description>
		</Option>
	</OptionsGroup>
</Widget>
