<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<StorageService xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="">
    <StorageEngine className="com.exalead.cv360.storage.engine.jdbc.JdbcStorageEngine" enable="true">
        <Parameter name="driver" secured="false" value="org.sqlite.JDBC"/>
        <Parameter name="connection" secured="false" value="jdbc:sqlite:{dataDir}/storageService/storage.db.sqlite"/>
        <Parameter name="tablePrefix" secured="false" value="cv360"/>
        <Parameter name="synchronizedWrites" secured="false" value="true"/>
        <Parameter name="poolInitialSize" secured="false" value="1"/>
        <Parameter name="poolMaxActive" secured="false" value="3"/>
        <Parameter name="poolMaxIdle" secured="false" value="2"/>
    </StorageEngine>
    <RepushDocuments>false</RepushDocuments>
</StorageService>
